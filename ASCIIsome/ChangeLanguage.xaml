<Window x:Class="ASCIIsome.ChangeLanguage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:ASCIIsome.Properties"
        xmlns:c="clr-namespace:ASCIIsome.ValueConverters"
        xmlns:local="clr-namespace:ASCIIsome"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.ChangeLanguage}" Height="150" Width="200" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="Images\locale.png">
    <Window.Resources>
        <c:DisplayLanguageIndexConverter x:Key="DisplayLanguageIndexConverter"/>
        <local:ViewModel x:Key="viewModel"/>
    </Window.Resources>
    <DockPanel Margin="20,20,20,20">
        <ComboBox DockPanel.Dock="Top" ItemsSource="{Binding Source={x:Static local:DisplayLanguage.SupportedLanguage}}" SelectedIndex="{Binding DisplayLanguage, Converter={StaticResource DisplayLanguageIndexConverter}, Mode=TwoWay, Source={StaticResource viewModel}}" />
        <TextBlock Text="{Binding DisplayLanguage, Source={StaticResource viewModel}}"/>
    </DockPanel>
</Window>
