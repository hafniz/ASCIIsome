<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:ASCIIsome.Properties"
        xmlns:local="clr-namespace:ASCIIsome"
        xmlns:c="clr-namespace:ASCIIsome.ValueConverters"
        x:Class="ASCIIsome.About"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.About}" Height="400" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="Images\info.png">
    <Window.Resources>
        <c:VersionNumberConverter x:Key="VersionNumberConverter"/>
    </Window.Resources>
    <DockPanel Margin="20,20,20,20">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <TextBlock Text="{Binding Source={x:Static local:EnvironmentConst.ApplicationName}}" Foreground="#2b5797" FontSize="24" FontFamily="Segoe UI" VerticalAlignment="Bottom"/>
            <TextBlock Text="{Binding Source={x:Static local:EnvironmentConst.ApplicationVersion}, Converter={StaticResource VersionNumberConverter}}" Margin="10,0,0,4" VerticalAlignment="Bottom"/>
        </StackPanel>
        <TextBox IsReadOnly="True" Margin="0,10,0,0" Text="{x:Static p:Resources.AboutDetails}"/>
    </DockPanel>
</Window>
